{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ES2020"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noImplicitAny": true, // check the implicit any type
		"strictNullChecks": true, // check the implicit null and undefined types
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["vite.config.ts"],
	"exclude": ["node_modules"]
}
